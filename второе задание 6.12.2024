num1 = float(input("Введите первое число: "))
num2 = float(input("Введите второе число: "))
num3 = float(input("Введите третье число: "))

choice = input("Введите 'максимум' для нахождения максимума, 'минимум' для нахождения минимума или 'среднее' для нахождения среднего: ").lower()

if choice == "максимум":
    result = max(num1, num2, num3)
    print(f"Максимум из чисел: {result}")
elif choice == "минимум":
    result = min(num1, num2, num3)
    print(f"Минимум из чисел: {result}")
elif choice == "среднее":
    result = (num1 + num2 + num3) / 3
    print(f"Среднее арифметическое чисел: {result}")
else:
    print("Некорректный ввод. Пожалуйста, выберите 'максимум', 'минимум' или 'среднее'.")
