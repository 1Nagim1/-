num1 = float(input("Введите первое число: "))
num2 = float(input("Введите второе число: "))
num3 = float(input("Введите третье число: "))

choice = input("Введите 'сумма' для нахождения суммы или 'произведение' для нахождения произведения: ")

if choice == "сумма":
    result = num1 + num2 + num3
    print(f"Сумма чисел: {result}")
elif choice == "произведение":
    result = num1 * num2 * num3
    print(f"Произведение чисел: {result}")
else:
    print("Некорректный ввод. Пожалуйста, выберите 'сумма' или 'произведение'.")
